%h1= t Picture.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Picture.human_attribute_name(:plant)
      %th= Picture.human_attribute_name(:kind)
      %th= Picture.human_attribute_name(:title)
      /%th= Picture.human_attribute_name(:content)
      %th= Picture.human_attribute_name(:photo)
      %th= Picture.human_attribute_name(:taken_at)
      %th= Picture.human_attribute_name(:position)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @pictures.each do |picture|
      %tr
        %td= picture.plant.title
        %td= picture.kind
        %td= picture.title
        /%td= picture.content
        %td= image_tag picture.photo.thumb.url if picture.photo?
        %td= picture.taken_at
        %td= picture.position
        %td= status_mark picture.status
        %td= render 'admin/shared/index_buttons', resource: picture
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_picture_path, class: 'btn btn-primary btn-block'
