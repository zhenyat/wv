#myCarousel.carousel.slide.carousel-fade{"data-ride" => "carousel", "data-interval" => "6000"}
  / Indicators
  %ol.carousel-indicators
    %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
    - for i in 1..images.count-1
      %li{"data-slide-to" => "i", "data-target" => "#myCarousel"}

  / Wrapper for slides
  .carousel-inner{:role => "listbox"}
    - images.each_with_index do |value, index|
      - if index == 0
        .item.active
          = image_tag(value.image.view.url, title: value.content, class: 'center-block')
          .carousel-caption
            %h3= picture_date(value.taken_at)
            %p= value.title
      - else
        .item
          = image_tag(value.image.view.url, title: value.content, class: 'center-block')
          .carousel-caption
            %h3= picture_date(value.taken_at)
            %p= value.title
  
  / Left and right controls
  %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
    %span.sr-only= t :previous
  %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
    %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
    %span.sr-only= t :next


