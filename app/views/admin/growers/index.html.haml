%h1= t Grower.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Grower.human_attribute_name(:name)
      %th= Grower.human_attribute_name(:title)
      /%th= Grower.human_attribute_name(:address)
      %th= Grower.human_attribute_name(:phone)
      %th= Grower.human_attribute_name(:url)
      /%th= Grower.human_attribute_name(:about)
      /%th= Grower.human_attribute_name(:description)
      %th= Grower.human_attribute_name(:logo)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @growers.each do |grower|
      %tr
        %td= grower.name
        %td= grower.title
        /%td= grower.address
        %td= grower.phone
        %td= grower.url
        /%td= grower.about
        /%td= grower.description
        %td= image_tag grower.logo.thumb.url if grower.logo?
        %td= status_mark grower.status
        %td= render 'admin/shared/index_buttons', resource: grower
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_grower_path, class: 'btn btn-primary btn-block'
