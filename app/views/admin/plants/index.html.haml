%h1= t Plant.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Plant.human_attribute_name(:grower)
      %th= Plant.human_attribute_name(:title_la)
      %th= Plant.human_attribute_name(:title)
      %th= Plant.human_attribute_name(:hybrid_parentage)
      %th= Plant.human_attribute_name(:kind)
      /%th= Plant.human_attribute_name(:zone_min)
      /%th= Plant.human_attribute_name(:zone_max)
      /%th= Plant.human_attribute_name(:quantity)
      /%th= Plant.human_attribute_name(:planted_in)
      /%th= Plant.human_attribute_name(:position)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @plants.each do |plant|
      %tr
        %td= image_tag plant.grower.logo.thumb.url
        %td= plant.title_la
        %td= plant.title
        %td= plant.hybrid_parentage
        %td= plant.kind
        /%td= plant.zone_min
        /%td= plant.zone_max
        /%td= plant.quantity
        /%td= plant.planted_in
        /%td= plant.position
        %td= status_mark plant.status
        %td= render 'admin/shared/index_buttons', resource: plant
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_plant_path, class: 'btn btn-primary btn-block'
