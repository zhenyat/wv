%h1= t Article.model_name.human
%table.table.table-striped
  %tbody
    - @article.attributes.each do |key, value|
      - if key == 'id' || key.include?('digest') || key == 'created_at' || key == 'updated_at' || key == 'content'
        //skip these attributes
      - else
        %tr
          - if key == 'status'
            %td= t 'status.status'
            %td= status_mark @article.status
          - elsif key == 'content'
            %td= raw @article.content
          - else
            %td= t "activerecord.attributes.article.#{key}"
            %td= value

.form_actions
  .row
    .col-md-2
      = link_to t('actions.back'), admin_articles_path, class: 'btn btn-primary btn-block'
