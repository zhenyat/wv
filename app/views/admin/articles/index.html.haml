%h1= t Article.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Article.human_attribute_name(:title)
      %th= Article.human_attribute_name(:author)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.author
        %td= status_mark article.status
        %td= render 'admin/shared/index_buttons', resource: article
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_article_path, class: 'btn btn-primary btn-block'
