%h1= t Overview.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Overview.human_attribute_name(:name)
      %th= Overview.human_attribute_name(:title)
      %th= Overview.human_attribute_name(:carousel)
      /%th= Overview.human_attribute_name(:content)
      %th= Overview.human_attribute_name(:image)
      %th= Overview.human_attribute_name(:taken_at)
      %th= Overview.human_attribute_name(:position)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @overviews.each do |overview|
      %tr
        %td= overview.name
        %td= overview.title
        %td= status_mark overview.carousel?
        /%td= overview.content
        %td= image_tag overview.image.thumb.url if overview.image?
        %td= overview.taken_at
        %td= overview.position
        %td= status_mark overview.status
        %td= render 'admin/shared/index_buttons', resource: overview
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_overview_path, class: 'btn btn-primary btn-block'
