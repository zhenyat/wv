%h1 Welcome to West Virginia Dacha!

= render("shared/carousel", images: @carousel_images) if @carousel_images.present?

= render "home_content"

%table.table
  %tr
    %td.text-center
      - if @deciduous_cover.image.present?
        .wrapper
          = link_to image_tag(@deciduous_cover.image.cover.url),  pages_deciduous_path
          .description
            %p.description_content= "Deciduous Plants"
      - else
        = link_to "Deciduous Plants", pages_deciduous_path
    %td.text-center
      - if @evergreen_cover.image.present?
        .wrapper
          = link_to image_tag(@evergreen_cover.image.cover.url),  pages_evergreen_path
          .description
            %p.description_content= "Evergreen Plants"
      - else
        = link_to "Evergreen Plants", pages_evergreen_path
    %td.text-center
      - if @herbacious_cover.image.present?
